<p id="notice"><%= notice %></p>
<h1>Announcements</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.body %></td>
        <td><%= announcement.category %></td>
        <td><%= link_to 'Show', announcement, class: "btn-sm btn-primary" %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_announcement_path(announcement), class: "btn-sm btn-primary" %></td>
          <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-primary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @announcements %>
<br>
<%= link_to 'New Announcement', new_announcement_path %>
